<% provide(:title, 'Years') %>
<h1><%= icon('far', 'calendar-alt', class: 'fa-fw left') %>Years</h1>
<p><%= link_to new_year_path, { :class => 'btn btn-success' } do %><%= icon('fas', 'plus', class: 'left') %>New Year<% end %></p>
<div class="panel">
	<% if @years.blank? %>
	<p class="lead">No years.</p>
	<% else %>
	<table>
		<thead>
			<tr>
				<th>Year</th>
				<th class="text-right">Expenses</th>
				<th class="text-right">Revenue</th>
			</tr>
		</thead>
		<tbody>
			<% @years.each do |year| %>
			<tr>
				<td><%= link_to year do %><%= year.year %><% end %></td>
				<td class="currency text-right"><%= number_to_currency(year.expenses.sum(:cost), { :negative_format => '(%n)' }) %></td>
				<td class="currency text-right"><%= number_to_currency(year.incomeTotal, { :negative_format => '(%n)' }) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<% end %>
</div>
