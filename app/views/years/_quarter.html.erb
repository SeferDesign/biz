<div class="col-lg-6">
  <h3 class="text-center">Quarter <%= quarterNumber %></h3>
  <h4 class="text-center"><%= Date::MONTHNAMES[3 * quarterNumber - 2] %> - <%= Date::MONTHNAMES[3 * quarterNumber] %></h4>
  <p class="lead">Income: <span class="pull-right currency green"><%= number_to_currency(@year.incomeByQuarter(quarterNumber), { :negative_format => '(%n)' }) %></span></p>
  <p class="lead">Tax Est.: <span class="pull-right currency red"><%= number_to_currency(@year.taxOwedByQuarterActualCalendar(quarterNumber), { :negative_format => '(%n)' }) %></span></p>
  <p class="lead">Payment Est.*: <span class="pull-right currency red"><%= number_to_currency(@year.taxOwedByQuarterTaxCalendar(quarterNumber), { :negative_format => '(%n)' }) %></span></p>
  <hr class="hidden-lg hidden-md">
</div>
