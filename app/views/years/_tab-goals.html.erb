<table class="table table-striped">
	<thead>
		<tr>
			<th>&nbsp;</th>
			<th>Goal</th>
			<th>Actual</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><strong>Year</strong></td>
			<td><span class="currency"><%= number_to_currency(@year.goal_year, { :precision => 0 }) %></span></td>
			<td><span class="currency"><%= number_to_currency(@year.incomeTotal, { :negative_format => '(%n)' }) %></span></td>
		</tr>
		<% @year.goals_months.each_with_index do |month, index| %>
		<tr>
			<td><strong><%= Date::MONTHNAMES[index + 1] %></strong></td>
			<td><span class="currency"><%= number_to_currency(month.to_i, { :precision => 0 }) %></span></td>
			<td><span class="currency"><%= number_to_currency(Invoice.paidByMonth(@year.year, month).sum('cost').to_i, { :negative_format => '(%n)' }) %></span></td>
		</tr>
		<% end %>
	</tbody>
</table>
