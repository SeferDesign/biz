<div class="row">
	<div class="col-sm-12">
		<p class="lead text-center">Total Receivable: <span class="currency red"><%= number_to_currency(Invoice.unpaid.sum('cost'), { :negative_format => '(%n)' }) %></span> <small>(<%= pluralize(Invoice.unpaid.count, 'invoice') %>)</small></p>
	</div>
</div>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table table-goals">
			<thead>
				<tr>
					<th>&nbsp;</th>
					<th class="text-right">Revenue</th>
					<th class="text-right">Goal</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= today.year %></td>
					<td class="text-right"><span class="pull-right currency green"><%= number_to_currency(Invoice.paidByYear(today.year).sum('cost'), { :negative_format => '(%n)' }) %></span></td>
					<td class="text-right"><%= number_to_currency(Year.where(year: today.year).first.goal_year.to_i) %></td>
				</tr>
				<tr>
					<td><%= today.strftime('%B') %></td>
					<td class="text-right"><span class="pull-right currency green"><span class="pull-right currency green"><%= number_to_currency(Invoice.paidByMonth(today.year, today.month).sum('cost'), { :negative_format => '(%n)' }) %></span></span></td>
					<td class="text-right"><%= number_to_currency(Year.where(year: today.year).first.goals_months[today.month - 1].to_i) %></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="col-lg-4 col-lg-offset-2 col-md-6">
		<h3 class="text-center">Paid</h3>
		<span class="lead"><%= today.year %> YTD: <span class="pull-right currency green"><%= number_to_currency(Invoice.paidByYear(today.year).sum('cost'), { :negative_format => '(%n)' }) %></span></span>
		<hr class="halfbottom">
		<span class="lead"><%= today.strftime('%B') %>: <span class="pull-right currency green"><%= number_to_currency(Invoice.paidByMonth(today.year, today.month).sum('cost'), { :negative_format => '(%n)' }) %></span></span>
	</div>
	<div class="col-lg-4 col-md-6">
		<h3 class="text-center">Goals</h3>
		<% Goal.where('startdate <= ? AND enddate >=  ?', today, today).order('enddate DESC, amount DESC').each_with_index do |goal, index| %>
			<span class="lead"><%= link_to goal do %><%= goal.timeperiod %>:<% end %><span class="pull-right currency"><%= number_to_currency(goal.amount, { :negative_format => '(%n)' }) %></span></span>
			<% if index == 0 %>
			<hr class="halfbottom">
			<% end %>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="nopad-side col-sm-8 col-sm-offset-2">
		<div class="chart-wrap"><%= column_chart chart_trailing_x_months_path(5), stacked: true %></div>
	</div>
</div>
