<footer>
	<div class="container">
		<div class="row">
			<div class="col-sm-12 text-center">
				<% if user_signed_in? %><nav id="footer-nav">
					<ul>
						<li><%= link_to 'Clients', clients_path %></li><li><%= link_to 'Projects', projects_path %></li><li><%= link_to 'Invoices', invoices_path %></li><li><%= link_to 'Goals', goals_path %></li><li><%= link_to '2014', year_path(Year.where(year: 2014).first.year) %></li><li><%= link_to '2015', year_path(Year.where(year: 2015).first.year) %></li><li><%= link_to destroy_user_session_path, :method => :delete do %>Sign Out<i class="fa fa-sign-out right"></i><% end %></li>
